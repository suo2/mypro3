<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huawei.solarsafe.view.maintaince.todotasks.TodoTaskActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbfbf"
        android:focusable="true" />
    <LinearLayout
        android:id="@+id/ll_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_bordershape">

        <SearchView
            android:id="@+id/search_patrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="-15dp"
            android:queryHint="@string/search_to_do_tasks"/>
    </LinearLayout>

    <View
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbfbf"
        android:focusable="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/work_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
