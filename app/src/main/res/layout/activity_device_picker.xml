<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.huawei.solarsafe.utils.customview.RefreshLayout
            android:id="@+id/device_picker_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lv_dev_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

        </com.huawei.solarsafe.utils.customview.RefreshLayout>

        <toan.android.floatingactionmenu.FloatingActionButton
            android:id="@+id/fab_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:fab_colorNormal="@color/coral"
            app:fab_colorPressed="@color/darkorange"
            app:fab_icon="@drawable/sousuo"
            app:fab_size="mini"/>

    </FrameLayout>

    <include layout="@layout/defects_base_slideing"/>

</android.support.v4.widget.DrawerLayout>