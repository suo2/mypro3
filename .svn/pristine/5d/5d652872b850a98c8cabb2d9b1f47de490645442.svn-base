<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dev_list_item"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:minHeight="80dp"
    android:layout_height="75dp">

    <TextView
        android:id="@+id/tv_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/esn_colon"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_dev_esn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/plant_name"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:text="@string/station_name_colon"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_dev_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/plant_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/iv_dev_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:textColor="@color/green"
        android:text="aaaa"
        android:textSize="20sp"
        android:visibility="invisible"
        />


</RelativeLayout>