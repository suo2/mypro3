<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<android.support.design.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
	<android.support.design.widget.AppBarLayout
		android:id="@+id/materialup.appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		>
		<RelativeLayout
			android:id="@+id/materialup.title_container"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:orientation="vertical"
			android:gravity="center"
			app:layout_scrollFlags="scroll|snap"
			>
			<com.oragee.banners.BannerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/banner"/>
		</RelativeLayout>
		<include
			android:id="@+id/title_layout"
			layout="@layout/child_title_layout"
			/>
	</android.support.design.widget.AppBarLayout>
	<android.support.v4.view.ViewPager
		android:id="@+id/content_view_pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		/>
	</android.support.design.widget.CoordinatorLayout>
	<RelativeLayout
		android:id="@+id/title_banner"
		android:layout_width="match_parent"
		android:layout_height="40dp">
		<ImageView
			android:id="@+id/add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:src="@drawable/add_white"/>
		<TextView
			android:id="@+id/tvNewDeviceCount"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="@dimen/size_5dp"
			android:background="@drawable/shape_circle_red_bg"
			android:text="6"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="10sp"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/map"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:src="@drawable/map_white"/>
		<ImageView
			android:id="@+id/search"
			android:layout_toLeftOf="@id/map"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:src="@drawable/search_white"/>
	</RelativeLayout>
</FrameLayout>