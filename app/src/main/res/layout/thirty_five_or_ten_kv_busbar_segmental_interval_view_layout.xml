<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_10dp"
    android:orientation="vertical">

    <!-- 35/10KV母线/分段间隔电路图 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="@dimen/booster_wide_line"
            android:layout_weight="2"
            android:background="@color/kv_35"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />
        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="@dimen/booster_wide_line"
            android:layout_weight="2"
            android:background="@color/kv_35"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:id="@+id/line3"
                android:layout_width="@dimen/booster_narrow_line"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/kv_35"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hand_car_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/two_hand_car_divide"/>

                <ImageView
                    android:id="@+id/circuit_breaker_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circuit_breaker_open"/>

                <TextView
                    android:id="@+id/tx_15900"
                    style="@style/tx_booster_details"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/circuit_breaker_state"
                    android:layout_marginRight="5dp"
                    android:text="15900"
                    />

                <TextView
                    android:id="@+id/tx_hand_car"
                    style="@style/tx_booster_details"
                    android:layout_toRightOf="@+id/circuit_breaker_state"
                    android:layout_marginLeft="5dp"
                    android:text="15900"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="@dimen/booster_narrow_line"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/kv_35"/>


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:id="@+id/line5"
                android:layout_width="@dimen/booster_narrow_line"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/kv_35"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/second_hand_car_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/two_hand_car_divide"/>

                <View
                    android:id="@+id/line8"
                    android:layout_width="@dimen/booster_narrow_line"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@color/kv_35"/>

                <TextView
                    android:id="@+id/tx_15902"
                    style="@style/tx_booster_details"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/line8"
                    android:layout_marginRight="5dp"
                    android:text="15902"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/line6"
                android:layout_width="@dimen/booster_narrow_line"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/kv_35"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />
        <View
            android:id="@+id/line7"
            android:layout_width="0dp"
            android:layout_height="@dimen/booster_narrow_line"
            android:layout_weight="3"
            android:background="@color/kv_35"/>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />



    </LinearLayout>




</LinearLayout>
