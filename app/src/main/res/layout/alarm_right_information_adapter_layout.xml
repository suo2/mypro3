<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/content_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_level"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/view_level"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />



        <TextView
            android:id="@+id/tv_interval_type"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_interval_type"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_interval_name"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/interval_name_view"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_alarm_type"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/view_alarm_type"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />


        <TextView
            android:id="@+id/tv_alarm_name"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:id="@+id/alarm_name_view"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_states"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/states_view"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_local_time"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/view_local_time"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_produce_time"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/view_produce_time"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_recovery_time"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/recovery_time_view"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_repair_advice"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp" />
        <View
            android:id="@+id/repair_advice_view"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ccc" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"/>
</LinearLayout>
