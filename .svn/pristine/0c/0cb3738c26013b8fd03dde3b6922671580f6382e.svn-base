<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:text="@string/gruop_string_str"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/tv_1"
            android:text="N/A"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_open_or_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="6dp"
            android:paddingLeft="25dp"
            android:paddingRight="18dp"
            android:paddingTop="6dp"
            android:src="@drawable/domain_zd_icon" />
    </RelativeLayout>

    <LinearLayout
        style="@style/ll_dev_info_pvlist"
        android:layout_marginTop="18dp"
       >

        <LinearLayout
            style="@style/ll_dev_info_pvlist_item"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                style="@style/dev_info_title"
                android:text="@string/component_manufacturers"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/edtv_no_ed_bg">

                <com.huawei.solarsafe.utils.MySpinner
                    android:id="@+id/spinner_search_option_zjcs"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"></com.huawei.solarsafe.utils.MySpinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/xiala_icon" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ll_dev_info_pvlist_item"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                style="@style/dev_info_title"
                android:text="@string/component_type"
               />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/edtv_no_ed_bg">

                <Spinner
                    android:id="@+id/spinner_search_option_zjxh"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"></Spinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/xiala_icon" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/ll_dev_info_pvlist"
        android:layout_marginTop="14dp"
        >

        <LinearLayout
            style="@style/ll_dev_info_pvlist_item"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                style="@style/dev_info_title"
                android:text="@string/pv_power_str"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edtv_no_ed_bg">

                <Spinner
                    android:id="@+id/spinner_search_option_zjgl"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"></Spinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/xiala_icon" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ll_dev_info_pvlist_item"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                style="@style/dev_info_title"
                android:text="@string/string_component_num"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_ed_bg">

                <com.huawei.solarsafe.view.login.MyEditText
                    android:id="@+id/ed_zczj_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/login_ed_bg"
                    android:hint="@string/intput_fw_0_50"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/ll_dev_info_pvlist"
        android:layout_marginTop="14dp"
        >

        <LinearLayout
            style="@style/ll_dev_info_pvlist_item"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                style="@style/dev_info_title"
                android:text="@string/string_cap"
              />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_ed_bg">

                <TextView
                    android:id="@+id/ed_zc_capicity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edtv_no_ed_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/ll_dev_info_pvlist_item"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="top">

            <TextView
                style="@style/dev_info_title"
                android:text="@string/component_launch_date" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_ed_bg">

                <TextView
                    android:id="@+id/ed_zj_tcrq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_ed_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="@color/red"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/group_string_detail_child_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F1F1F1" />
</LinearLayout>