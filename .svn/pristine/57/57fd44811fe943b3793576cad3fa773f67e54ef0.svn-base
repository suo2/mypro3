<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/real_time_information_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/real_time_information_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_theme"
                    android:text="@string/real_time_information"
                    android:gravity="center"/>

                <View
                    android:id="@+id/real_time_information_line"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="1dp"
                    android:visibility="invisible"
                    android:background="@color/color_theme"/>


            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/station_view_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/station_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_three"
                    android:text="@string/station_view"
                    android:gravity="center"/>

                <View
                    android:id="@+id/station_view_line"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="1dp"
                    android:visibility="invisible"
                    android:background="@color/text_three"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@color/color_theme"/>


    <FrameLayout
        android:id="@+id/station_detail_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>




</LinearLayout>
