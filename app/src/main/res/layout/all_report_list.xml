<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#F1F1F1">
    <RelativeLayout
        android:id="@+id/inverter_report"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/report_background"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/inverter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/inverter_report_icon"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="44dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inverter_report"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/inverter_icon"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@+id/inverter_icon_comback"
            android:layout_marginRight="5dp"
            android:textColor="@color/danzhan_color"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/inverter_icon_comback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_info_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/capacity_report"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/report_background"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <ImageView
            android:id="@+id/capacity_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/capacity_icon"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="48dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capacity_report"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/capacity_icon"
            android:layout_toLeftOf="@+id/capacity_icon_comback"
            android:layout_marginLeft="30dp"
            android:textColor="@color/danzhan_color"
            android:layout_marginRight="5dp"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/capacity_icon_comback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_info_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>

</LinearLayout>