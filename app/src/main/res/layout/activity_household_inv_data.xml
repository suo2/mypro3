<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context="com.huawei.solarsafe.view.devicemanagement.CasInvDataActivity">

    <ListView
        android:id="@+id/devsingledata_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/white"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none"
        />
    <LinearLayout
        android:id="@+id/llyt_dev_household_oper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_white"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/btn_dev_household_switch"
            style="@style/dev_mgr_operation_btn_style"
            android:text="@string/device_replace" />

        <Button
            android:id="@+id/btn_dev_household_set"
            style="@style/dev_mgr_operation_btn_style"
            android:text="@string/parameter_setting" />
    </LinearLayout>
</LinearLayout>
