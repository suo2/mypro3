<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huawei.solarsafe.view.devicemanagement.DeviceSingleDataHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">

            <Spinner
                android:id="@+id/history_spinner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7"
                android:layout_margin="3dp"
                ></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/code_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">
            <TextView
                android:id="@+id/tv_single_name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/code_sele"
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/iv_single_name1"

                />
            <ImageView
                android:id="@+id/iv_single_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_single_time_show1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1.2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/report_time_show"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:id="@+id/iv_zidingyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/rili" />
            <TextView
                android:id="@+id/tv_time_show_single"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_zidingyi"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:textSize="11sp"
                android:textColor="@color/danzhan_color"/>
        </RelativeLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_bottom1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_white"
        android:padding="5dp"></com.github.mikephil.charting.charts.LineChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">

            <Spinner
                android:id="@+id/history_spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7"
                android:layout_margin="3dp"
                ></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/code_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">
            <TextView
                android:id="@+id/tv_single_name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/code_sele"
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/iv_single_name2"

                />
            <ImageView
                android:id="@+id/iv_single_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_single_time_show2"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1.2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/report_time_show"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:id="@+id/iv_zidingyi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/rili" />
            <TextView
                android:id="@+id/tv_time_show_single2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_zidingyi2"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:textSize="11sp"
                android:textColor="@color/danzhan_color"/>
        </RelativeLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_bottom2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_white"
        android:padding="5dp"></com.github.mikephil.charting.charts.LineChart>
</LinearLayout>
