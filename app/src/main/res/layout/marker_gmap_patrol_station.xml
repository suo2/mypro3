<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/rl_marker_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/level_list_patrol_station_icon" />

        <CheckBox
            android:id="@+id/cb_patrol_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:button="@null"
            android:background="@drawable/checkbox_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_marker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_marker_icon"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textColor="@color/tv_text_amapmarker"
        android:textSize="@dimen/amap_marker_textsize" />

</RelativeLayout>
