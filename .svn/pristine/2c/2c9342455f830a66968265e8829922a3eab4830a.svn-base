<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/size_10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/left_bar_progress_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/left_circle_role_bg"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/right_bar_progress_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_circle_role_bg"
                android:layout_weight="1">

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/left_bar_progress_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/white"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/right_bar_progress_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="11sp"/>
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5dp">
        <TextView
            android:id="@+id/left_bar_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/left_bar_"
            android:textColor="@color/shucai_color"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/right_bar_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/shucai_color"
            android:layout_marginLeft="@dimen/size_5dp"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
