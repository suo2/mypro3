<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:paddingTop="10dp">
        <!-- Step1 -->
        <LinearLayout
            android:id="@+id/llyt1"
            style="@style/new_station_progress_llyt_style">

            <LinearLayout
                style="@style/new_station_progress_top_llyt_style">

                <View
                    android:id="@+id/v_step1_l"
                    style="@style/new_station_progress_line_style"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_step1"
                    style="@style/new_station_progress_tv_style"
                    android:text="1" />

                <View
                    android:id="@+id/v_step1_r"
                    style="@style/new_station_progress_line_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_step1_describe"
                style="@style/new_station_progress_dscribe_tv_style"
                android:text="@string/basic_information_" />
        </LinearLayout>
        <!-- Step2 -->
        <LinearLayout
            android:id="@+id/llyt2"
            style="@style/new_station_progress_llyt_style">

            <LinearLayout style="@style/new_station_progress_top_llyt_style">

                <View
                    android:id="@+id/v_step2_l"
                    style="@style/new_station_progress_line_style" />

                <TextView
                    android:id="@+id/tv_step2"
                    style="@style/new_station_progress_tv_style"
                    android:text="2" />

                <View
                    android:id="@+id/v_step2_r"
                    style="@style/new_station_progress_line_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_step2_describe"
                style="@style/new_station_progress_dscribe_tv_style"
                android:text="@string/access_device" />
        </LinearLayout>
        <!-- Step3 -->
        <LinearLayout
            android:id="@+id/llyt3"
            style="@style/new_station_progress_llyt_style">

            <LinearLayout style="@style/new_station_progress_top_llyt_style">

                <View
                    android:id="@+id/v_step3_l"
                    style="@style/new_station_progress_line_style" />

                <TextView
                    android:id="@+id/tv_step3"
                    style="@style/new_station_progress_tv_style"
                    android:text="3" />

                <View
                    android:id="@+id/v_step3_r"
                    style="@style/new_station_progress_line_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_step3_describe"
                style="@style/new_station_progress_dscribe_tv_style"
                android:text="@string/zc_detail_setting_str" />
        </LinearLayout>
        <!-- Step4 -->
        <LinearLayout
            android:id="@+id/llyt4"
            style="@style/new_station_progress_llyt_style">

            <LinearLayout style="@style/new_station_progress_top_llyt_style">

                <View
                    android:id="@+id/v_step4_l"
                    style="@style/new_station_progress_line_style" />

                <TextView
                    android:id="@+id/tv_step4"
                    style="@style/new_station_progress_tv_style"
                    android:text="4" />

                <View
                    android:id="@+id/v_step4_r"
                    style="@style/new_station_progress_line_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_step4_describe"
                style="@style/new_station_progress_dscribe_tv_style"
                android:text="@string/electricity_price_setting" />
        </LinearLayout>
        <!-- Step5 -->
        <LinearLayout
            android:id="@+id/llyt5"
            style="@style/new_station_progress_llyt_style">

            <LinearLayout style="@style/new_station_progress_top_llyt_style">

                <View
                    android:id="@+id/v_step5_l"
                    style="@style/new_station_progress_line_style" />

                <TextView
                    android:id="@+id/tv_step5"
                    style="@style/new_station_progress_tv_style"
                    android:text="5" />

                <View
                    android:id="@+id/v_step5_r"
                    style="@style/new_station_progress_line_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_step5_describe"
                style="@style/new_station_progress_dscribe_tv_style"
                android:text="@string/other_information" />
        </LinearLayout>
        <!-- Step6 -->
        <LinearLayout
            android:id="@+id/llyt6"
            style="@style/new_station_progress_llyt_style">

            <LinearLayout style="@style/new_station_progress_top_llyt_style">

                <View
                    android:id="@+id/v_step6_l"
                    style="@style/new_station_progress_line_style" />

                <TextView
                    android:id="@+id/tv_step6"
                    style="@style/new_station_progress_tv_style"
                    android:text="6" />

                <View
                    android:id="@+id/v_step6_r"
                    style="@style/new_station_progress_line_style"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_step6_describe"
                style="@style/new_station_progress_dscribe_tv_style"
                android:text="@string/camera_information" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F1F1F1" />

    <FrameLayout
        android:id="@+id/flyt_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pre"
            style="@style/new_station_operation_yellow_btn_style"
            android:text="@string/back_" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/new_station_operation_whilte_btn_style"
            android:text="@string/cancel_" />

        <Button
            android:id="@+id/btn_next"
            style="@style/new_station_operation_yellow_btn_style"
            android:text="@string/next" />
    </LinearLayout>
</LinearLayout>