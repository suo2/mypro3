<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_endian"
        style="@style/pnt_devices_params_item_llyt_style">

        <TextView
            style="@style/pnt_devices_params_item_tv_name_style"
            android:text="@string/big_little_endian" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spinner_endian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:textColor="#333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_endian_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:contentDescription="@string/app_name"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/drop_down" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_baud_rate"
        style="@style/pnt_devices_params_item_llyt_style">

        <TextView
            style="@style/pnt_devices_params_item_tv_name_style"
            android:text="@string/baud_rate" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spinner_baud_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:gravity="right"
                android:textColor="#333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_baud_rate_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:contentDescription="@string/app_name"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/drop_down" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />
</LinearLayout>