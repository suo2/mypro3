<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">
        <LinearLayout
            android:id="@+id/popwindow_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textColor="@color/commom_text_default"
                android:text="@string/station_statues"/>
            <com.huawei.solarsafe.view.CustomViews.StringItemsView
                android:id="@+id/station_states_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/commom_text_default"
                android:layout_marginLeft="15dp"
                android:text="@string/capatity_no_colon"/>
            <com.huawei.solarsafe.view.CustomViews.StringItemsView
                android:id="@+id/station_capacitor_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
            </com.huawei.solarsafe.view.CustomViews.StringItemsView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/commom_text_default"
                android:layout_marginLeft="15dp"
                android:text="@string/equipment_type"/>
            <com.huawei.solarsafe.view.CustomViews.StringItemsView
                android:id="@+id/station_type_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
            </com.huawei.solarsafe.view.CustomViews.StringItemsView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/commom_text_default"
                android:layout_marginLeft="15dp"
                android:text="@string/grid_time"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="@string/started_on"
                    android:textColorHint="#cccccc"
                    android:textColor="#cccccc"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:background="@drawable/device_filter_pop_no_device_select_type_bg"/>
                <View
                    android:layout_width="8dp"
                    android:layout_height="1dp"
                    android:background="#666666"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="@string/end_time"
                    android:textColorHint="#cccccc"
                    android:textColor="#cccccc"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:background="@drawable/device_filter_pop_no_device_select_type_bg"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff9933"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/reset"
            android:background="#dfdfdf" />

        <TextView
            android:id="@+id/ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/make_sure"
            android:background="#ff9933"/>

    </LinearLayout>



</RelativeLayout>
