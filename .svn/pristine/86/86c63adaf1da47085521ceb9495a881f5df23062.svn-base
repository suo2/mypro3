<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_interval_history_pop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/button_interval_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/restore_report_text"
            android:background="@color/restore_report"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/reset"/>
        <Button
            android:id="@+id/button_interval_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/sure_report"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/sure"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/ll_interval_history_pop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/danzhan_color"
                android:textSize="15sp"
                android:text="@string/query_time_interval"/>
            <TextView
                android:id="@+id/tv_show_interval_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/interval_backgrad"
                android:textSize="12sp"
                android:textColor="@color/danzhan_color"
                android:hint="@string/click_to_select_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/danzhan_color"
                android:textSize="15sp"
                android:text="@string/signal_point_unit"/>
            <com.huawei.solarsafe.utils.customview.MyGridView
                android:id="@+id/interval_history_gradview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:numColumns="2"
                android:horizontalSpacing="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp">
                <TextView
                    android:id="@+id/sigal_point_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/danzhan_color"
                    android:textSize="15sp"
                    android:text="@string/sigal_point_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/danzhan_color"
                    android:textSize="12sp"
                    android:layout_below="@+id/sigal_point_name"
                    android:text="@string/signal_five_interval"/>
                <ImageView
                    android:id="@+id/interval_more_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="@dimen/size_10dp"
                    android:paddingTop="@dimen/size_10dp"
                    android:src="@drawable/domain_zk_icon"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/interval_history_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>