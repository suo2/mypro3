<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="7dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_plant_view_device_dialog_close"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编号"
            android:textColor="@color/text_one"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_plant_view_device_dialog_close"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/esn_safe"
            android:textSize="14sp"
            android:textColor="@color/text_two"/>
        <TextView
            android:id="@+id/tvSn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="SN"
            android:textSize="12sp"
            android:textColor="@color/text_one"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSequence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/esn_safe"
            android:textSize="14sp"
            android:textColor="@color/text_two"/>
        <TextView
            android:id="@+id/tvSequence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="SN"
            android:textSize="12sp"
            android:textColor="@color/text_one"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llModelVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/version_safe"
            android:textSize="14sp"
            android:textColor="@color/text_two"/>
        <TextView
            android:id="@+id/tvModelVersion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="型号"
            android:textSize="12sp"
            android:textColor="@color/text_one"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDipangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/dipangle"
            android:textSize="14sp"
            android:textColor="@color/text_two"/>
        <TextView
            android:id="@+id/tvDipangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="倾角"
            android:textSize="12sp"
            android:textColor="@color/text_one"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDirectionAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/directionAngle"
            android:textSize="14sp"
            android:textColor="@color/text_two"/>
        <TextView
            android:id="@+id/tvDirectionAngle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="方位角"
            android:textSize="12sp"
            android:textColor="@color/text_one"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnDevice"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_theme"
        android:text="@string/device"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        android:layout_marginTop="7dp"/>

</LinearLayout>
