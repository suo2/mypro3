<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/spinner_dev_drepy_opt"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        >
        <Spinner
            android:id="@+id/optimity_choice_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line1fill"
            android:layout_margin="3dp"
            ></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/drop_down_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">

            <Spinner
                android:id="@+id/signalpoint_unit_spinner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7"
                android:layout_margin="3dp"
                ></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_signalpoint_name1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">
            <TextView
                android:id="@+id/tv_signalpoint_name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/code_sele"
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/iv_signalpoint_name1"

                />
            <ImageView
                android:id="@+id/iv_signalpoint_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_signalpoint_time1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1.2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/report_time_show"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:id="@+id/signalpoint_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/rili" />
            <TextView
                android:id="@+id/tv_signalpoint_time1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/signalpoint_time1"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:textSize="11sp"
                android:textColor="@color/danzhan_color"/>
        </RelativeLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_signalpoint1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/common_white"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">

            <Spinner
                android:id="@+id/signalpoint_unit_spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7"
                android:layout_margin="3dp"
                ></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_signalpoint_name2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_dev_drepy_pin">
            <TextView
                android:id="@+id/tv_signalpoint_name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/code_sele"
                android:textSize="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="3dp"
                android:layout_toLeftOf="@+id/iv_signalpoint_name2"

                />
            <ImageView
                android:id="@+id/iv_signalpoint_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/drop_down_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_signalpoint_time2"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1.2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/report_time_show"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:id="@+id/iv_signalpoint_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/rili" />
            <TextView
                android:id="@+id/tv_signalpoint_time2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_signalpoint_time2"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:textSize="11sp"
                android:textColor="@color/danzhan_color"/>
        </RelativeLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_signalpoint2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/common_white"
        android:padding="5dp"/>

</LinearLayout>