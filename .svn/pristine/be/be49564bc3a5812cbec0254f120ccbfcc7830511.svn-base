<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_head_back_button" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="6dp"
                android:drawableLeft="@drawable/ic_patrol_item"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/patrol_items"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llyt_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_remark"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/remark_defect"
                android:textStyle="bold" />

            <com.huawei.solarsafe.utils.customview.ContainsEmojiEditText
                android:id="@+id/gis_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/comment_shape"
                android:gravity="top"
                android:minLines="5"
                android:textSize="14sp"
                android:padding="3dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_pic"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/picture"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/no_fj_data"
                />

            <LinearLayout
                android:id="@+id/llyt_piccontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <com.huawei.solarsafe.utils.customview.CustomGridView
                    android:id="@+id/gv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="4dp"
                    android:numColumns="4"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:verticalSpacing="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_gis_over"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_partol_complete"
                android:padding="5dp"
                android:text="@string/save_report"
                android:textColor="@color/et_corners_color"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>