<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_info_gridview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/info_gridview_photo"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_info_gridview_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_sale_consultation_num_yun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_circle_red_bg"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_info_gridview_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="@color/commom_text_default"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>