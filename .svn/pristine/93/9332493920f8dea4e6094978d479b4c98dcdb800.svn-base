<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_report_pop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/button_restore_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/restore_report_text"
            android:background="@color/restore_report"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/restore_default"/>
        <Button
            android:id="@+id/button_sure_report_pop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/sure_report"
            android:textSize="15sp"
            android:gravity="center"
            android:text="@string/sure"/>
    </LinearLayout>
    <TextView
        android:id="@+id/report_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/danzhan_color"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/custom_report"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/report_tv_title_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/shucai_color"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/custom_report_three"
        android:layout_below="@+id/report_tv_title" />
    <GridView
        android:id="@+id/report_gradview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_report_pop"
        android:numColumns="2"
        android:verticalSpacing="12dp"
        android:layout_below="@+id/report_tv_title_three"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>