<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_device"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.huawei.solarsafe.view.pnlogger.SecondDeviceActivity">

    <include layout="@layout/common_head_shucai"/>

    <ListView
        android:id="@+id/lv_second_device_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_device_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_device_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sure"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
