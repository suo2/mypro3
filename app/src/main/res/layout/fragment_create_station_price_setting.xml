<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:orientation="vertical">
        <!--是否使用默认电价-->
        <LinearLayout
            android:id="@+id/ll_moren_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="@string/use_moren_price_str"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cb_moren_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <!--货币设置-->
        <LinearLayout
            style="@style/new_station_item_llyt"
            android:layout_marginBottom="10dp"
            android:background="@color/common_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

            <TextView
                style="@style/new_station_item_tv_name"
                android:text="@string/pnloger_current_design" />

            <RelativeLayout style="@style/new_station_item_rlyt_content">

                <Spinner
                    android:id="@+id/sp_currency_setting"
                    style="@style/new_station_item_contain_sp_content" />

                <ImageView style="@style/new_station_item_contain_iv_drop" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llyt_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:text="@string/to_set_price_success"/>

    </LinearLayout>
</ScrollView>