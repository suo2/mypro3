<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.extra.PovertyActivity">


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/photovoltaic_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/photovoltaic_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#ff9933"
                    android:layout_centerVertical="true"
                    android:text="@string/photovoltaic_area"/>


                <View
                    android:id="@+id/photovoltaic_view"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#ff9933"
                    android:layout_alignLeft="@+id/photovoltaic_tx"
                    android:layout_alignRight="@+id/photovoltaic_tx"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/booster_station_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp">

                <TextView
                    android:id="@+id/booster_station_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:layout_centerVertical="true"
                    android:text="@string/booster_station"/>

                <View
                    android:id="@+id/booster_station_view"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#ff9933"
                    android:layout_alignLeft="@+id/booster_station_tx"
                    android:layout_alignRight="@+id/booster_station_tx"
                    android:visibility="invisible"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>



    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_rl">

    </FrameLayout>
</RelativeLayout>
