<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ivtrouble_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huawei.solarsafe.view.maintaince.ivcurve.IVTroubleListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_trouble_type"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_gray"
            android:layout_marginBottom="10dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/trouble_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:textColor="#333"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <ImageView
                android:id="@+id/iv_trouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xltb"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/button_error"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/button_my"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/error_info"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"/>

    </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_trouble_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

</LinearLayout>
